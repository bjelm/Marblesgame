<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/nyabak" >
    
    <ImageView
        android:id="@+id/img1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/bflame2" />
   
    <LinearLayout
    android:id="@+id/vg2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/svarighet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:layout_marginTop="400dp"        
        
        android:layout_gravity="center">
   
    <RadioButton
        android:id="@+id/hard"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
       
        android:layout_weight="100"
        android:background="@drawable/hardxml"
        android:button="@null" />

    <RadioButton
        android:id="@+id/medium"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
       
        android:layout_weight="100"
        android:background="@drawable/mellanxml"
        android:button="@null" />

    <RadioButton
        android:id="@+id/easy"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        
        android:layout_weight="100"
        android:background="@drawable/easyxml"
        android:button="@null"
        android:checked="true" />
       
       <ImageButton
       android:id="@+id/starta"
       android:layout_width="fill_parent"
       android:layout_height="0dp"
      
       android:layout_margin="30dp"
       android:layout_weight="50"
       android:background="@null"
       android:contentDescription="@drawable/startabutton"
       android:onClick="play"
       android:scaleType="fitCenter"
       android:src="@drawable/startabutton"
       android:text="Spela" />
 </RadioGroup>

</LinearLayout>   


</RelativeLayout>